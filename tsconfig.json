{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "esnext",
        "declaration": true,
        "moduleResolution": "node",
        "target": "es2017",
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "./src/*.d.ts"
    ]
}
